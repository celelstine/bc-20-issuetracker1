<script src="/js/issue.js"></script>
    <form method="post" action="issue" id="issue">
        <fieldset>
        <legend> Report an Issue </legend>
        <input type="hidden" id="uid" value="{{uid}}">
        <input type="hidden" unameid="uname" value="{{uname}}">
        <span id="result">  </span>
        Subject: <br>
        <input type="text" name="subject" id="subject"  required><br>
        priority: <br>
        <select  name="priority" id="priority" required>
          <option value="">Please select the severity</option>
          <option value="Critical">Critical</option>
          <option value="High">High</option>
          <option value="Medium">Medium</option>
          <option value="Low">Low</option>
        </select><br>
        Description: <br />
        <textarea rows="4" cols="75" id="description" placeholder="Describe the issue here..."></textarea> 
        <br/>

        Department: <br>
        <select  name="department" id="department" required>
          <option value="">Please select the concerned department</option>
          <option value="Finance">Finance</option>
          <option value="Operations">Operations</option>
          <option value="Marketing">Marketing</option>
          <option value="Sales">Sales</option>
          <option value="Success">Success</option>
          <option value="Training">Training</option>
        </select><br>
        Notification: <br>
        <select  name="notifymeans" id="notifymeans" style="width:50%" >
          <option value="">Select Notification method</option>
          <option value="phone">SMS</option>
          <option value="email">Email</option>
        </select> 
         <input type="text" name="notifyvalue" id="notifyvalue" style="width:45%"  >
        <br>
        <button type="submit" class="submit"  value="Submit">Submit</button> <br />
        </fieldset>
    </form>

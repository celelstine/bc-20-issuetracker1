<script src="/js/closeissue.js"></script>
<link rel="stylesheet" type="text/css" href="/css/issue.css">


  <div class="alert alert-success">
  </div>
<div class="table-responsive">     
 <input type="hidden" id="uid" value="{{uid}}">     
 <input type="hidden" id="issueid" name="issueid" >   
  <table class="table" id="issues">
    <thead>
      <tr>
        <th>Raise By</th>
        <th>Department</th>
        <th>Subject</th>
        <th>Priority</th>
        <th>Status</th>
        <th> Date close </th>
        <th> Assignee </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>
  </table>
</div>
<!-- Modals -->
  <div class="modal fade" id="description" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Issue Description</h4>
        </div>
        <div class="modal-body">
          <p id="descvalue">Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
    <div class="modal fade" id="assign" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Select an assignee </h4>
        </div>
        <div class="modal-body">
         <form id="setAssign">
         <div class="form-group">
          <select class="form-control" id="assignee">
            <option value="">Please select a staff</option>
          </select>
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Assign</button>
        </div>
        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
     </div> 
    </div>
  <div class="modal fade" id="commenting" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add a Note </h4>
        </div>
        <div class="modal-body">
         <form id="addcomment">
         <div class="form-group">
          <div class="form-group">
            <div class="input-group">
            <textarea class="form-control" rows="3" cols="70" id="comment"></textarea>
            </div>
          </div>
        </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
    
